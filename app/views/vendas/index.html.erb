<h1> Lista de vendas </h1>


<table cellpadding=10>

  <tr bgcolor='#4B7399' style='color:white'>
    <th>Produto</th>
    <th>Vendedor</th>
    <th>Cliente</th>
    <th> </th>
    <th> </th>
    <th> </th>
  </tr>
  <% @vendas.each do |venda| %>
    <tr>
      <td><%= venda.produto.nome%></td>
      <td><%= venda.vendedor.nome%></td>
      <td><%= venda.cliente.nome%></td>
      <td><%= link_to 'Mostrar', venda%></td>
      <td><%= link_to 'Editar', edit_venda_path(venda)%></td>
      <td><%= link_to 'Excluir', venda, :confirm => 'Tem certeza?', :method => :delete%></td>
    </tr>
  <% end %>
</table>

<br/>

<%= link_to 'Efetuar venda', new_venda_path%>

